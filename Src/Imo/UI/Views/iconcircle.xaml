<UserControl x:Class="ImoSilverlightApp.UI.Views.IconCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ImoSilverlightApp.UI.Views"
             mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             x:Name="iconCircleRoot"
             d:DesignHeight="480" d:DesignWidth="480">

    <Border x:Name="container" Background="{Binding Background, ElementName=iconCircleRoot}">
        <local:Icon IconName="{Binding IconName, ElementName=root}" Foreground="White" x:Name="icon" />
    </Border>
</UserControl>
